<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">-4</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/m_p_8</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/m_p_4</item>
        <item name="android:paddingLeft">@dimen/m_p_8</item>
        <item name="android:paddingRight">@dimen/m_p_8</item>
        <item name="android:paddingTop">@dimen/m_p_4</item>
        <item name="android:scaleType">fitCenter</item>

    </style>
</resources>
